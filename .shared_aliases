# custom cd/clear function
cd_clear() {
    cd "$@" && clear && ls
}

git_a() {
    git add "$@"
}

git_d(){
    git diff "$1"
}

git_gcap(){
    git add .
    git commit -m "$*"
    git push
}

alias pinggoogle='ping www.google.com'
alias openh='nohup open . > /dev/null & e'

# refined base commands
alias cl='clear && ls'
alias kindly='sudo'
alias e='exit'
alias cd~='cd ~ && cl'
alias cd='cd_clear'
alias cd..='cd ..'
alias nvimh='nvim .'
alias codeh='code . && e'
alias b='cd ..'
alias b2='cd .. && cd ..'

# cd
alias cddoc='cd ~/Documents/'
alias cddow='cd ~/Downloads/'
alias cddot='cd ~/Documents/dotfiles/'

# git
alias gits='git status'
alias gita.='git add .'
alias gita='git_a'
alias gitc='git commit -m'
alias gituc='git restore --staged $1'  # git uncommit
alias gitd='git_d'
alias gitp='git push'
alias gcap='git_gcap'

# bashrc
alias tbashrc='tail -n 50 ~/.bashrc'
alias ebashrc='sudo nvim ~/.bashrc'
alias sbashrc='source ~/.bashrc'
