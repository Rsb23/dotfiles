# custom cd/clear function
cd_clear() {
  cd "$@" && clear && ls
}

alias pinggoogle='ping www.google.com'
alias openh='nohup open . > /dev/null'

# refined base commands
alias cl='clear && ls'
alias kindly='sudo'
alias e='exit'
alias cd~='cd ~ && cl'
alias cd='cd_clear'
alias nvimhere='nvim .'
alias codehere='code . && e'

# bashrc
alias tbashrc='tail -n 50 ~/.bashrc'
alias ebashrc='sudo nvim ~/.bashrc'
alias sbashrc='source ~/.bashrc'
